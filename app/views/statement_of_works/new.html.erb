<h1>New sow</h1>

<% form_for(@statement_of_work) do |f| %>
  <%= f.error_messages %>
  <p>
    	<%= f.label "SOW Title: " %><br />
    	<%= f.text_field :title %>
  </p>
	<p>
    	<%= f.label "Company name: " %><br />
		<%= text_field_with_auto_complete :company, :name %>
  </p>
	

  <p>
    <%= f.label "Scope of Work: " %><br />
    <%= f.text_area :scope %>
  </p>
  <p>
    <%= f.label "Customer Project Manager Name: " %><br />
      <%= text_field_with_auto_complete :company_contact, :name %>
  </p>
  <p>
    <%= f.label "Engine yard Project Manager Name: " %><br />
    <%= text_field_with_auto_complete :engine_yard_contact, :name %>
  </p>
  <p>
    <%= f.label "Numbers of Hours needed:" %><br />
    <%= f.text_field :no_hours %>
  </p>
  <p>
    <%= f.label "Estimated Fee: " %><br />
    <%= f.text_field :est_fee %>
  </p>
  <p>
    <%= f.label "Additional Terms:" %><br />
    <%= f.text_area :add_terms %>

  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', statement_of_works_path %>