<% javascript 'show' %>
<%= stylesheet_link_tag 'widgEditor' %>
<%= javascript_include_tag "widgEditor" %>
<h1>New sow</h1>

<% form_for(@statement_of_work) do |f| %>
  <%= f.error_messages %>
  <p>
    	<%= f.label "SOW Title: " %><br />
		<%= f.text_field :title %>
  </p>
	<p>
		<%= f.label "Company Name: " %><br />		
		<%= text_field_with_auto_complete :company, :name, { :size => 15 }, { :url => formatted_companies_path(:js), :method => :get, :param_name => 'search' } %>
  </p>

	<p id="state_field">
  		<label for="person_state_id">Company Contact:</label><br />
  		<%= f.collection_select :company_contact_id, CompanyContact.find(:all), :id, :name, :prompt => "Select a Company first then a contact" %>
	</p>
  <p>
    <%= f.label "Engine yard Project Manager Name: " %><br />
	<%= f.collection_select :engine_yard_contact_id, EngineYardContact.find(:all), :id, :name, :prompt => 	"Select an Engine Yard Contact" %> 
	
  <p>
    <%= f.label "Scope of Work: " %><br />
    <%= f.text_area :scope, :class=>"widgEditor" %>
  </p>

  <p>
    <%= f.label "Numbers of Hours needed:" %><br />
    <%= f.text_field :no_hours %>
  </p>
  <p>
    <%= f.label "Estimated Fee: " %><br />
    <%= f.text_field :est_fee %>
  </p>
  <p>
    <%= f.label "Additional Terms:" %><br/>
    <%= f.text_area :add_terms, :class=>"widgEditor" %>

  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', statement_of_works_path %>