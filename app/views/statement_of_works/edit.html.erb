<h1>Editing sow</h1>

<% form_for(@statement_of_work) do |f| %>
	<%= f.error_messages %>
  	<p>
    	<%= f.label "SOW Title: " %><br />
    	<%= f.text_field :title %>
  	</p>
	<p>
    	<%= f.label "Company Name: " %><br />
   		<%= select_tag('company_id', options_for_select(@company.collect {|comp|[comp.name, comp.id ]}, @statement_of_work.company_id)) %>
  	</p>
  	<p>
    	<%= f.label "Scope of Work: " %><br />
    	<%= f.text_area :scope %>
  	</p>
  	<p>
    	<%= f.label "Customer Project Manager Name: " %><br />
   		<%= select_tag('company_contact_id', options_for_select(@company_contacts.collect{|cont| [cont.name, cont.id ]}, @statement_of_work.company_contact_id)) %>
  	</p>
  	<p>
    	<%= f.label "Engine yard Project Manager Name: " %><br />
  	
   		<%= select_tag('engine_yard_contact_id', options_for_select(@engine_yard_contacts.collect{|ey| [ey.name, ey.id ]}, @statement_of_work.engine_yard_contact_id)) %>
	</p>
  	<p>
    	<%= f.label "Numbers of Hours needed:" %><br />
    	<%= f.text_field :no_hours %>
  	</p>
  	<p>
    	<%= f.label "Estimated Fee: " %><br />
    	<%= f.text_field :est_fee %>
  	</p>
  	<p>
    	<%= f.label "Additional Terms:" %><br />
    	<%= f.text_area :add_terms %>
  	<p>
    	<%= f.submit 'edit' %>
  	</p>
<% end %>

<%= link_to 'Show', @statement_of_work %> |
<%= link_to 'Back', statement_of_works_path %>

